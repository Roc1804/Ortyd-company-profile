include cards/case.pug

.root
  .container.fixed-width-md-up
    .row.spacing6
      .col-md-3.col-sm-12.px-6.pt-6
        .wow.fadeInLeftShort(data-offset="-100" data-delay="0.2s" data-duration="0.3s")
          .side-filter
            h4.title-primary.mt-10 #{$t.agency_landing.case_title}
            ul.collection.nav#case_categories
              each item, index in categories
                li.collection-item.filter(class=index === 1 && "active")
                  a.waves-effect #{item}
      .col-md-9.col-sm-12.px-6.pt-6
        .massonry
          .row#case_gallery
            .col-sm-3.pa-3
              .wow.fadeInUpShort(data-wow-delay="0.2s" data-wow-duration="0.4s")
                each item in caseData
                  if item.size === "small"
                    div.item
                      - var bg = item.bg || ""
                      - var simple = item.simple || ""
                      |
                      |
                      +case-card(bg, item.logo, item.title, item.desc, item.size, simple)
            .col-sm-4.pa-3
              .wow.fadeInUpShort(data-wow-delay="0.4s" data-wow-duration="0.4s")
                each item in caseData
                  if item.size === "medium"
                    div.item
                      - var bg = item.bg || ""
                      - var simple = item.simple || ""
                      |
                      |
                      +case-card(bg, item.logo, item.title, item.desc, item.size, simple)
            .col-sm-5.pa-3
              .wow.fadeInUpShort(data-wow-delay="0.6s" data-wow-duration="0.4s")
                each item in caseData
                  if item.size === "big"
                    div.item
                      - var bg = item.bg || ""
                      - var simple = item.simple || ""
                      |
                      |
                      +case-card(bg, item.logo, item.title, item.desc, item.size, simple)
